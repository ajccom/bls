extends show

append head
  link(rel="stylesheet",href="/jmeditor/mathquill-0.9.1/mathquill.css")
  !=css('facebox')
  !=js('papers')
  script(src='/jmeditor/JMEditor.js')
  script
    window.report = !{JSON.stringify(report)};
    window.questions = !{JSON.stringify(questions)};
block content
  .main.customer_records.customer_report(ng-app='Paper', ng-controller='CustomerReportCtrl')
    .form
      .form-header
        ul.tabs.inline-block
          li.tab
            a(href='/customers/#{instance.id}')会员信息
          li.tab
            a(href='/customers/#{instance.id}/records')上传记录
          li.tab.current
            a(href='/customers/#{instance.id}/report')错误报告
          a(style='margin-left:20px').close.btn 关闭
      include infobar
      div.report(ng-include="'/templates/report-table.html'")