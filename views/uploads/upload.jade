html.no-js
  // <![endif]
  head
    meta(charset='utf-8')
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    title 学之云后台管理
    meta(content='', name='description')
    meta(content='andrew', name='author')
    link(href='/favicon.ico', rel='shortcut icon')
    block head
      !=js('upload')
      !=css('reset')
      !=css('app')
  body
    input#fileupload(type='file',name='file',data-url='/uploads')
    #preview
    script
      $(function () {
          $('#fileupload').fileupload({
              dataType: 'text',
              add: function(e,data){
                $('#preview').text('上传中..');
                data.submit();
              },
              done: function(e, data) {
                if(/\.(png|gif|jpg)$/.test(data.result)){
                  $('#preview').html('<img src="'+data.result+'"/>');
                  $(window).data('file',data.result);
                }
              }
          });
      });